    options = options or {}
    
    local Window = {}
    setmetatable(Window, Library)
    
    -- Initialize
    Window.Tabs = {}
    Window.ActiveTab = nil
    Window.CurrentTheme = options.Theme or "Dark"
    Config.Theme = Themes[Window.CurrentTheme] or Themes.Dark
    
    -- Clean up
